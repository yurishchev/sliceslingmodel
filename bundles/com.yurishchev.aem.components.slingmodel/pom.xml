        <artifactId>sliceslingmodel-bundles</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <artifactId>sliceslingmodel-components-slingmodel</artifactId>
    <packaging>bundle</packaging>
    <name>sliceslingmodel - Components Bundle with Sling Models</name>
    <description>OSGi bundle for Sling Models components code</description>

    <properties>
        <bundle.export>
            com.yurishchev.aem.components.model.slingmodel
