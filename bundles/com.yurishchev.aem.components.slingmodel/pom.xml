    </properties>

    <dependencies>
        <dependency>
            <groupId>com.yurishchev.aem</groupId>
            <artifactId>sliceslingmodel-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.sling</groupId>
